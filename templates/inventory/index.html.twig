{% extends 'base.html.twig' %}

{% block title %}Hello InventoryController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
    
    
	<div class="example-wrapper">
		<a href="{{path('new_inventory')}}">Commencer l'inventaire</a>
	</div>
   

	{% if date is defined and date is not null %}

		<form action="" method="POST">
            <h2>Date : {{date|format('d/m/Y')}} </h2>
			<h3>Chercher par livre</h3>
			<input id="book_code" name="book_code" type="text" placeholder="Code du livre…"/>
			<button type="submit">Rechercher</button>
		</form>


		{% if currentBook is defined and currentBook is not null %}
			<div class="card">
				
				<div class="card-body">
					<div class="book-image"></div>
					<div class="book-details">
						<p>Code :
							{{ currentBook.bookCode }}</p>
						<p>Titre :
							{{ currentBook.title }}</p>
						<p>Auteur :
							{{ currentBook.author }}</p>
						{# <p>Date d’emprunt :
																{{ currentBookLoan.loanDate|date('d/m/Y') }}</p>
															<p>Date de retour prévu :
																{{ currentBookLoan.expectedReturnDate|date('d/m/Y') }}</p> #}
						<p>Statut :
							{{ currentBook.bookStatus.value }}</p>
						{# <p>Emprunté par : famille
																{{ currentBookLoan.family.name }}</p> #}
						<p>Emplacement :
							<span class="location">{{ currentBook.location.value }}</span>
						</p>
					</div>
                    <div class="action">
					<a href="{{ path('new_inventory', { id: currentBook.id }) }}" class="verified">
						Valider
					</a>
                    <a href="{{ path('report_book', { id: currentBook.id }) }}" class="report">
						Signaler
					</a>
				</div>
				</div>

			</div>


		{% endif %}
	{% endif %}


</div>{% endblock %}
