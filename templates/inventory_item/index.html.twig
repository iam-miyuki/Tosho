{% extends 'base.html.twig' %}

{% block title %}Inventaire - Bibliothécaire{% endblock %}

{% block body %}
	<div class="page-title">
		<h3>Inventaire</h3>
		<img src="{{ asset('img/books.svg') }}" alt="inventory">
	</div>

	<h4 class="section-title">Sessions inventaires ouvertes</h4>

	<div class="btn-card-wrapper">
		{% if inventories and inventories|length > 0 %}
			{% for i in inventories %}
				<a href="{{ path('search-item', { id: i.id }) }}">
					<div class="btn-card">
						<p>Date : {{ i.date|date('d/m/Y') }}</p>
						<p>Bâtiment : 
							<span class="location location-inventory">{{ i.location.value }}</span>
						</p>
					</div>
				</a>
			{% endfor %}
		{% else %}
			<div class="no-result">
				<p>Aucune session d'inventaire n'est ouverte</p>
			</div>
		{% endif %}
	</div>
{% endblock %}



