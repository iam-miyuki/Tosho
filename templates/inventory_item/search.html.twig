{% extends 'base.html.twig' %}

{% block title %}Vérification des livres
{% endblock %}

{% block body %}
	<div class="page-title">
		<h3>Inventaire</h3>
		<img src="{{ asset('img/books.svg') }}" alt="inventory">
	</div>
	<p>Date :
		{{ currentInventory.date|date('d/m/Y') }}</p>
	<p>Bâtiment :
		{{ currentInventory.location.value }}</p>
	<p>Note :
		{{ currentInventory.note }}</p>

	<form action="" method="POST">
		<h3 class="form-title">Entrez un code livre</h3>
		<input id="book_code" name="book_code" type="text" placeholder="Code du livre…" required/>
		<button type="submit">Rechercher</button>
	</form>

{% endblock %}


