<div class="cards-wrapper">
	<div class="cards-container">
		{% for book in noChecked %}
			<div class="card">
				<div class="card-body">
					<img class="book-cover" src="{{ asset('img/child-book.svg') }}" alt="book-for-child">
					<div class="detail book-details">
						<p>Code :
							{{ book.code }}</p>
						<p>Titre :
							{{ book.title }}</p>
						<p>Auteur :
							{{ book.author }}</p>
						<p>Statut :
							{{ book.status.value }}</p>
						<p>Emplacement :
							<span class="location">{{ book.location.value }}</span>
						</p>
					</div>
				</div>
				<div class="href-btn">
					<a href="{{path('add-item',{tab:'new',id:currentInventory.id,book:book.id})}}">VÃ©rifier</a>
				</div>
			</div>
		{% endfor %}
	</div>
</div>
