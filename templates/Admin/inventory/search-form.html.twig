<div class="forms-wrapper filter-form">

	<div>
		<h4>Filtrer la recherche</h4>
		{{ form_start(filterForm, {
			'action': path('inventory'),
			'method': 'POST'
		  }) }}

		<div class="filter-item">
			<p>Statut :
			</p>

			{{ form_widget(filterForm.status, {'attr': {'class': 'form-field enum-field'}}) }}
		</div>
		<div class="filter-item filter-date">
			<p>Date :
			</p>
			{{ form_widget(filterForm.date, {'attr': {'class': 'form-field date-field'}}) }}
		</div>
		<div class="filter-item">
			<p>Lieu :
			</p>

			{{ form_widget(filterForm.location, {'attr': {'class': 'form-field enum-field'}}) }}
		</div>
		<button type="submit" class="btn">Chercher</button>
		{{ form_end(filterForm) }}
	</div>
</div>
