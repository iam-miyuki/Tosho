<form action="" method="POST">
    <h3 class="form-title">Entrez un code livre</h3>
    <input type="text" id="book_code" name="book_code" placeholder="Code livre…"/>
    <button type="submit">Rechercher</button>
</form> 

{% if currentBook is defined and currentBook is not null %}
		<div class="card">
	<div class="card-body">
		<div class="book-image"></div>
		<div class="detail book-details">
			<p>Code : {{currentBook.bookCode }}</p>
			<p>Titre : {{ currentBook.title }}</p>
			<p>Auteur : {{ currentBook.author }}</p>
			<p>Statut : {{ currentBook.bookStatus.value }}</p>
			<p>Bâtiment : <span class="location">{{ currentBook.location.value }}</span></p>
		</div>
	</div>
</div>
{% endif %}




